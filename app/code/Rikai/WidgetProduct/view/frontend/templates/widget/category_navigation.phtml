<?php
$categories = $this->getStoreCategories(true,false,true);
$categoryHelper = $this->getCategoryHelper();
$catagories_show = $this->getCategoriesShow();
?>
<div class="menu-scroll-block menu-home">
		<div class="title-menu">
			<h5 class="title-custom">
				<?php if($this->getTitleBlock() != null): ?>
					<?php echo $this->getTitleBlock(); ?>
				<?php else: ?>
					<?php echo __('Categories Navigation') ?>
 				<?php endif ?>
			</h5>
			<span class="sh-menu hidden-lg hidden-md"><i aria-hidden="true" class="fas fa-bars"></i></span>
		</div>
	<ul id="content-navigation" class="vertical-menu-widget scrollbar-inner">
		<?php foreach($categories as $category): ?>
			<?php if ($category->getIsActive() && in_array($category->getId(), $catagories_show)): ?>
				<?php $childrenCategories = $this->getChildCategories($category) ?>
				<li class="level0">
					<a class="fonts18" href="<?php echo $categoryHelper->getCategoryUrl($category) ?>"><?php echo $category->getName() ?></a>
					<?php if($childrenCategories && $this->getSubCategoriesMenu($category->getId())): ?>
						<?php echo $this->getChildCategoryHtml($childrenCategories,$category->getId()); ?>
					<?php endif; ?>
				</li>
			<?php endif ?>
		<?php endforeach; ?>
	</ul>
</div>
