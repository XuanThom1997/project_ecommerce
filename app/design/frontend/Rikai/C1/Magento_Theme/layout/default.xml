<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
	    <referenceContainer name="header.container" >
            <referenceBlock name="header.panel.wrapper" remove="true"/>
		<container htmlTag="div" htmlClass="box" >
		</container>
            <referenceContainer name="header-wrapper" >
                <block class="Rikai\C1\Block\NewDropdown"  name="test-dropdown" template="Rikai_C1::newDropdown.phtml" before="minicart"/>
                <block class="Rikai\C1\Block\Notification\Notification"  name="dropdown-header-notification" template="Rikai_C1::notification.phtml" before="custom-login-link"/>
                <block class="Rikai\C1\Block\Favorite\Favorite" name="dropdown-header-favorite" template="Rikai_C1::favorite.phtml" before="dropdown-header-notification"/>
		        <block class="Rikai\C1\Block\Link" name="custom-login-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true" >Sign in</argument>
                        <argument name="path" xsi:type="string" translate="true" >customer/account/login</argument>
                    </arguments>
                </block>
            </referenceContainer>
        </referenceContainer>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/custom_logo.png</argument>
                <argument name="logo_alt" xsi:type="string">Rikai Technology</argument>
                <argument name="logo_width" xsi:type="number">50</argument>
                <argument name="logo_height" xsi:type="number">50</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="top.links" remove="true"/>
        <referenceBlock name="report.bugs" remove="true" />
        <referenceBlock name="copyright" remove="true" />
	    <referenceBlock name="advanced-search-link" remove="true" />

        <referenceContainer name="main">
            <referenceContainer name="content" remove="true" />
            <referenceContainer name="content.aside" remove="true" />
            <referenceContainer name="content.bottom" remove="true" />

            <container name="body" as="body" htmlTag="div" htmlClass="p-home-body">
                <container name="body-container" as="body-container" htmlTag="div" htmlClass="p-home-body-container">
                    <container name="body-side-left" htmlTag="div" htmlClass="p-home-body-side--left">
                        <block class="Rikai\C1\Block\Components\LeftBar\Search" name="side-left-search" template="Rikai_C1::components/leftbar/search.phtml" />
                        <block class="Rikai\C1\Block\Components\LeftBar\PickUp" name="side-left-pickup" template="Rikai_C1::components/leftbar/pickup.phtml" />
                        <block class="Rikai\C1\Block\Components\LeftBar\News" name="side-left-news" template="Rikai_C1::components/leftbar/news.phtml" />
                        <block class="Rikai\C1\Block\Components\LeftBar\Recruit" name="side-left-recruit" template="Rikai_C1::components/leftbar/recruit.phtml" />
                    </container>
                </container>
            </container>
        </referenceContainer>

        <referenceContainer name="page.bottom.container" remove="true" />

        <referenceContainer name="footer-container">
            <referenceContainer name="footer" remove="true" />
            <container name="footer_cotent" as="footer_content" label="Page Footer" htmlTag="div" htmlId="gblFooter" htmlClass="footer">
                <container name="wrapper" as="wrapper" label="Wraper Footer" htmlTag="div" htmlId="fWrapper">
                    <block class="Rikai\C1\Block\Footer\Content" name="footer-sitemap" as="footer-sitemap" template="Rikai_C1::footer/content.phtml" before="fcorporate"/>
                    <block class="Rikai\C1\Block\Footer\Endding" name="fcorporate" as="fcorporate" template="Rikai_C1::footer/endding.phtml" after="fcorporate"/>
                </container>
            </container>
        </referenceContainer>
    </body>
</page>
